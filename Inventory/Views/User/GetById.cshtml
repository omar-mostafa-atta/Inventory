@model User

<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <h1 class="display-5 fw-bolder text-white mb-2">User Details</h1>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="container mt-4">

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    Username
                </dt>
                <dd class="col-sm-9">
                    @Model.UserName
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Email
                </dt>
                <dd class="col-sm-9">
                    @Model.Email
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Phone Number
                </dt>
                <dd class="col-sm-9">
                    @Model.PhoneNumber
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    User Role
                </dt>
                <dd class="col-sm-9">
                    @ViewBag.RoleName
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Profile Image
                </dt>
                <dd class="col-sm-9">
                    <!-- User profile image -->
                    <img class="img-fluid user-img" src="~/assets/Users/@Model.imageurl" alt="@Model.imageurl" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-right">
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<style>
    /* Add styling for the user image */
    .user-img {
        width: 150px; /* Adjust width as needed */
        height: auto; /* Maintain aspect ratio */
        border-radius: 0.25rem; /* Rounded corners to match Bootstrap card style */
        margin-top: 15px; /* Spacing above the image */
    }
</style>
