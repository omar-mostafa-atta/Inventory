@using Inventory.DB.ViewModels.Report
@model CombinedReportViewModel

<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <h1 class="display-5 fw-bolder text-white mb-2">Reports</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container mt-4">
    <h2 class="text-center mb-4">Stock Reports</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover" style="background-color: #ffffff;">
                <thead style="background-color: #007bff; color: white;">
                    <tr>
                        <th>Product Name</th>
                        <th>Stock Quantity</th>
                        <th>Low Stock Threshold</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stock in Model.StockReports)
                    {
                            <tr>
                                <td>@stock.ProductName</td>
                                <td>@stock.StockQuantity</td>
                                <td>@stock.LowStockThreshold</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <h2 class="text-center my-4">Product Reports</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover" style="background-color: #ffffff;">
                <thead style="background-color: #28a745; color: white;">
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Supplier</th>
                        <th>Price</th>
                        <th>Stock Quantity</th>
                        <th>Stock Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.ProductReports)
                    {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>@product.Category</td>
                                <td>@product.Supplier</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.StockQuantity</td>
                                <td>@product.LowStockStatus </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <h2 class="text-center my-4">Supplier Reports</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-hover" style="background-color: #ffffff;">
                <thead style="background-color: #ffc107; color: white;">
                    <tr>
                        <th>Supplier Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Product Count</th>
                        <th>Product Names</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model.SupplierReports)
                    {
                            <tr>
                                <td>@supplier.SupplierName</td>
                                <td>@supplier.Email</td>
                                <td>@supplier.Phone</td>
                                <td>@supplier.ProductCount</td>
                                <td>
                                @if (supplier.ProductNames != null && supplier.ProductNames.Any())
                                {
                                    @string.Join(", ", supplier.ProductNames)
                                }
                                else
                                {
                                            <span>No Products</span>
                                }
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
