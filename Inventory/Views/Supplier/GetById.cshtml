@model Supplier

<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-6">
                <div class="text-center my-5">
                    <h1 class="display-5 fw-bolder text-white mb-2">Supplier Details</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container mt-4">


    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    Supplier Name
                </dt>
                <dd class="col-sm-9">
                    @Model.Name
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Email
                </dt>
                <dd class="col-sm-9">
                    @Model.Email
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Phone
                </dt>
                <dd class="col-sm-9">
                    @Model.Phone
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    Image
                </dt>
                <dd class="col-sm-9">
                    <!-- Supplier image styled similarly to user and product images -->
                    <img class="img-fluid supplier-img" src="~/assets/Suppliers/@Model.imageurl" alt="@Model.imageurl" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 text-right">
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="GetAll" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<style>
    /* Add styling for the supplier image */
    .supplier-img {
        width: 150px; /* Adjust width as needed */
        height: auto; /* Maintain aspect ratio */
        border-radius: 0.25rem; /* Rounded corners to match Bootstrap card style */
        margin-top: 15px; /* Spacing above the image */
    }
</style>
